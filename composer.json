{
    "name": "nicobleiler/php-passphrase",
    "description": "Passphrase generator with Laravel integration, inspired by Bitwarden. Uses the EFF long word list by default with support for custom wordlists.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "passphrase",
        "password",
        "generator",
        "eff",
        "diceware",
        "laravel",
        "security"
    ],
    "authors": [
        {
            "name": "Nico Bleiler"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0 || ^10.0",
        "phpunit/phpunit": "^11.4 || ^12.0 || ^13.0",
        "genphrase/genphrase": "^1.2.1",
        "martbock/laravel-diceware": "^2.1.0",
        "phpbench/phpbench": "^1.4.3"
    },
    "autoload": {
        "psr-4": {
            "NicoBleiler\\Passphrase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NicoBleiler\\Passphrase\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NicoBleiler\\Passphrase\\PassphraseServiceProvider"
            ],
            "aliases": {
                "Passphrase": "NicoBleiler\\Passphrase\\Facades\\Passphrase"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "bench": "vendor/bin/phpbench run --report=providers",
        "bench:baseline": "vendor/bin/phpbench run --tag=baseline --report=providers",
        "bench:compare": "vendor/bin/phpbench run --ref=baseline --report=providers"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}