{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":pinDevDependencies"
    ],
    "baseBranches": [
        "dev"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0,
    "packageRules": [
        {
            "description": "Automatically merge minor and patch-level updates for dev branch",
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true,
            "platformAutomerge": false,
            "automergeType": "pr",
            "matchBaseBranches": [
                "dev"
            ]
        }
    ],
    "dependencyDashboard": true
}
